/* ───── układ główny ───── */
body           { margin:0; font-family:Arial,Helvetica,sans-serif; background:#f6f7f9;}
.container     { width:90%; max-width:960px; margin:0 auto; }
.flex          { display:flex; }
.mt-4          { margin-top:1rem; }
.text-center   { text-align:center; }

/* ───── nawigacja ───── */
.navbar        { background:#243746; color:#fff; }
.navbar a      { color:#fff; text-decoration:none; margin-right:1rem; }
.navbar button { background:none; border:none; color:#fff; cursor:pointer; }

/* ───── przyciski / linki ───── */
.btn           { display:inline-block; padding:.5rem 1rem; border:0; border-radius:4px;
                 background:#2aa25a; color:#fff; cursor:pointer; text-decoration:none; }
.btn:hover     { background:#23874d; }

/* ───── karty listy tras ───── */
.card          { background:#fff; border-radius:6px; padding:1rem; box-shadow:0 1px 3px rgba(0,0,0,.1);}
.grid          { display:grid; grid-template-columns:repeat(auto-fill,minmax(260px,1fr)); gap:1rem; }

/* ───── formularze ───── */
input,select   { padding:.4rem .6rem; border:1px solid #ccc; border-radius:4px; width:100%; box-sizing:border-box;}
label          { font-size:.875rem; display:block; margin-bottom:.25rem; }
form .field    { margin-bottom:1rem; }


/* ───── drobne ───── */
h1             { margin:0 0 1rem; font-size:1.5rem; }
h2             { margin:.5rem 0; font-size:1.1rem; }
footer         { font-size:.8rem; color:#6b7280; margin:2rem 0; }